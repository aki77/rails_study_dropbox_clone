%tr
  %td
    = item_icon(user_folder)
    = link_to user_folder.name, user_folder
  %td= user_folder.updated_at
  %td= user_folder.content_type
  %td &nbsp;
  %td
    .btn-group
      %button.btn.btn-default.dropdown-toggle{ type: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false } }
        Action
        %span.caret
      %ul.dropdown-menu
        %li= link_to '削除', user_folder, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }
        %li= link_to '名前を変更', edit_user_folder_path(user_folder)
