- breadcrumb :folder, @folder

%ul.nav.nav-pills
  %li= link_to 'アップロード', new_user_folder_user_file_path(@folder)
  - if @folder.present?
    %li= link_to '新しいフォルダ', new_user_folder_user_folder_path(@folder)
  - else
    %li= link_to '新しいフォルダ', new_user_folder_path

%table.table
  %thead
    %tr
      %th 名前
      %th 更新
      %th 共有中のユーザ
      %th アクション
  %tbody
    - @items.each do |item|
      %tr
        %td
          = item_icon(item)
          = link_to item.name, item
        %td= item.updated_at
        %td &nbsp;
        %td
          .btn-group
            %button.btn.btn-default.dropdown-toggle{ type: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false } }
              Action
              %span.caret
            %ul.dropdown-menu
              %li= link_to '削除', item, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }
              - if item.folder?
                %li= link_to '名前を変更', edit_user_folder_path(item)
